@model Cards.Client.Models.CardForUpdate

<!--  Edit Card Table -->
<div class="cs-cardEditTable" id="cardEditTable">
    <h1>Edit Card</h1>
    <hr />
    <div class="row cs-editCardForm">
        <div class="col-md-12">
            <form asp-controller="Card" asp-action="CardEdit" method="post" id="editCardForm">
                <input asp-for="CardId" hidden />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" id="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" id="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Status" class="control-label">Status</label>
                    <select id="Status" class="form-select">
                        <option value="Todo">Todo</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Done">Done</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" id="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-dark cs-backtoCards">Back</a>
                    &nbsp;
                    <input type="submit" value="Save Changes" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>